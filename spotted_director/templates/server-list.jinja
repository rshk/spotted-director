{% extends "base.jinja" %}

{%  block content %}
    <h1>Servers</h1>

    <a href="#" class="btn btn-success">
        <i class="icon-plus"></i>
        Add server
    </a>

    <hr>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Host</td>
                <td>Actions</td>
            </tr>
        </thead>
        {% for name, host in servers.iteritems() %}
            <tr>
                <td><a href="{{ url_for('server_dashboard', server_name=name) }}">{{ name }}</a></td>
                <td>{{ host }}</td>
                <td>
                    <a href="#" class="btn btn-mini btn-danger">delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
